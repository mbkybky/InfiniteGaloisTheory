lemma limtoGalContinuous [IsGalois k K] : Continuous (mulEquivtoLimit k K).symm := by
  apply continuous_of_continuousAt_one
  apply continuousAt_def.mpr
  simp only [map_one, krullTopology_mem_nhds_one]
  intro H ‚ü®L, _, hO2‚ü©
